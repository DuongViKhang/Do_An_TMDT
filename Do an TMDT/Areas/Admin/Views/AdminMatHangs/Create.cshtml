@model Do_an_TMDT.Models.MatHang

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Styles{
<link href="~/Adminassets/summernote/summernote-bs4.css" rel="stylesheet" />
<link href="~/Adminassets/summernote/summernote.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">

}

<form asp-area="Admin" asp-controller="AdminMatHangs" asp-action="Create" method="post" enctype="multipart/form-data" >
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="page-header no-gutters has-tab">
        <div class="d-md-flex m-b-15 align-items-center justify-content-between">
            <div class="m-b-15">
                <button class="btn btn-primary">
                    <i class="anticon anticon-save"></i>
                    <span>Lưu</span>
                </button>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#MatHang-luachon">Thông tin cơ bản</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#MatHang-luachonthem">Thông tin chi tiết</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#MatHang-Mota">Mô tả</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#MatHang-Anh">Ảnh</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="MatHang-luachon">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="TenMatHang" class="font-weight-semibold">Tên mặt hàng</label>
                        <input type="text" class="form-control" asp-for="TenMatHang">
                        <span asp-validation-for="TenMatHang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GiaBan" class="font-weight-semibold">Giá bán</label>
                        <input asp-for="GiaBan" type="text" class="form-control">
                        <span asp-validation-for="GiaBan" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SoLuong" class="control-label font-weight-semibold"></label>
                        <input asp-for="SoLuong" class="form-control" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MaKichCo" class="control-label font-weight-semibold"></label>
                        <select asp-for="MaKichCo" class="form-control" asp-items="ViewBag.KichCo"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaMauSac" class="control-label font-weight-semibold"></label>
                        <select asp-for="MaMauSac" class="form-control" asp-items="ViewBag.MauSac"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="MatHang-luachonthem">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="MaNhaCungCap" class="control-label font-weight-semibold"></label>
                        <select asp-for="MaNhaCungCap" class="form-control" asp-items="ViewBag.NhaCungCap"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaThuongHieu" class="control-label font-weight-semibold"></label>
                        <select asp-for="MaThuongHieu" class="form-control" asp-items="ViewBag.ThuongHieu"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaDanhMuc" class="control-label font-weight-semibold"></label>
                        <select asp-for="MaDanhMuc" class="form-control" asp-items="ViewBag.DanhMuc"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="DangDuocBan" class="font-weight-semibold">Đang được bán</label>
                        <input class="form-check-inline" asp-for="DangDuocBan">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold ">Đang được hiển thị</label>
                        <input class="form-check-inline" asp-for="DangDuocHienThi" />
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="MatHang-Mota">
            <div class="card">
                <div class="card-body">
                    <textarea id="summernote" asp-for="MoTa"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="MatHang-Anh">
            <div class="card">
                <h2>Upload Multiple Image</h2>
                @Html.TextBox("files", "", new { type = "file", multiple = "multiple", accept = "image/*" })
                <br />
                <div class="filearray">
                </div>
                <br />
            </div>
        </div>
        
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
    <script src="~/Adminassets/summernote/summernote-bs4.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

    <script>
        @* script của multiple upload *@
        $(document).ready(function () {
            $("#files").on('change', function () {
                $(".filearray").empty();
                for (let i = 0; i < this.files.length; ++i) {
                    let filereader = new FileReader();
                    let $img = jQuery.parseHTML("<img width='150' height='100' src=''>");
                    filereader.onload = function () {
                        $img[0].src = this.result;
                    };
                    filereader.readAsDataURL(this.files[i]);
                    $(".filearray").append($img);
                }
            });
        });

        jQuery(document).ready(function () {
            $('.summernote').summernote({
                fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New'],
                styleTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5'],
                height: 200,
                minHeight: null,
                maxHeight: null,
                focus: true
            });
        });
    </script>

}
