@model Do_an_TMDT.Models.NguoiDung
@{
    ViewData["Title"] = "DonHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/4.css" rel="stylesheet" />
<div class="than">
    <img src="image/TrangThongTin.jpg" width="100%" height="300px" alt="">
    <div class="TieuDeTrangThongTin" text-center>
        Trang Khách Hàng


    </div>
</div>
<section class="NoidungChinh">
    <div class="Noidung1">
        <div class="title_hello">
            <h5 class="title_trangtaikhoan">Trang Tài Khoản</h5>
            <p>
                Xin chào:
                <span>@ViewBag.khachhang.TenNguoiDung </span>
            </p>
        </div>
        <ul class="noidung1_1">
            <li><a class="noidungInfo" asp-action="ChiTietNG">Thông tin tài khoản</a></li>
            <li><a class="noidungInfo_active"asp-action="DonHang">Đơn hàng của bạn</a></li>
            <li><a class="noidungInfo" href="@Url.Action("EditMK", new { id =@ViewBag.khachhang.MaNguoiDung })"">Đổi mật khẩu</a></li>
            <li><a class="noidungInfo" href="SoDiaChi.html">Số địa chỉ(0)</a></li>
            <li><a class="noidungInfo" href="index.html">Đăng xuất</a></li>
        </ul>
    </div>
    <div class="Noidung2">
        <h2 class="title_Chinh">Đơn hàng của bạn</h2>
        <div class="table_DonHang" >
            <table>
                <tr>
                    <th>Đơn hàng</th>
                    <th>Ngày</th>
                    <th>Địa chỉ</th>
                    <th>Giá trị đơn hàng</th>
                    <th>TT thanh toán</th>
                </tr>
                <tr>
                    @foreach (var item in ViewBag.donhang)
                    {
                    <th>@item.MaDonHang</th>
                    <th>@item.MaNguoiDung</th>
                    <th>@item.MaNguoiDung</th>
                    <th>@item.MaNguoiDung</th>
                    <th>@item.MaNguoiDung</th>
                    }
                </tr>

            </table>
        </div>


    </div>



</section>
