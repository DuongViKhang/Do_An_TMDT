<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
<section class="bread-crumb">
    <div class="container">
        <div class="nd-main-title-breadcrumb text-center">Thông Tin Khách Hàng</div>
        <ul class="breadcrumb" itemscope="" itemtype="https://schema.org/BreadcrumbList">
            <li class="home" itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                <a itemprop="item" href="/" title="Trang chủ">
                    <span itemprop="name">Trang chủ</span>
                    <meta itemprop="position" content="1">
                </a>
            </li>

            <li itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                <strong itemprop="name">Thay đổi mật khẩu</strong>
                <meta itemprop="position" content="2">
            </li>

        </ul>
    </div>

</section>
<section class="NoidungChinh">
    <div class="Noidung1">
        <div class="title_hello">
            <h5 class="title_trangtaikhoan">Trang Tài Khoản</h5>
            <p>
                Xin chào:
                <span>Khách hàng </span>
            </p>
        </div>
        <ul class="noidung1_1">
            <li><a class="noidungInfo" asp-action="ChiTietNG">Thông tin tài khoản</a></li>
            <li><a class="noidungInfo_active" asp-action="DonHang">Đơn hàng của bạn</a></li>
            <li><a class="noidungInfo">Đổi mật khẩu</a></li>
            <li><a asp-action="SoDiaChi">Số địa chỉ(0)</a></li>
            <li><a asp-controller="Home" asp-action="Loadsanpham">Đăng xuất</a></li>
        </ul>
    </div>
    <form asp-action="EditMK" class="Noidung2">
        <h2 class="title_Chinh">Đổi mật khẩu</h2>
        <p>Để đảm bảo tính bảo mật, vui lòng đặt mật khẩu với ít nhất 8 kí tự</p>
        <div class="KhungDoiMK">
            <div class="MKCu">
                <p>Mật khẩu cũ</p>
                <input asp-for="MatKhauHash" class="MKhauCu" type="password" placeholder="Nhập mật khẩu cũ">
            </div>
            <div class="MKMoi1">
                <p>Mật khẩu mới</p>
                <input class="MKhauMoi1" type="password" placeholder="Nhập lại mật khẩu mới">
            </div>
            <div class="MKMoi2">
                <p>Nhập lại mật khẩu mới</p>
                <input class="MKhauMoi2" type="password" placeholder="Nhập mật khẩu mới">
            </div>
            <button type="button" onclick="" class="btn_changePW">
                Đặt lại mật khẩu
            </button>
        </div>


    </form>



</section>

